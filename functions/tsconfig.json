{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "lib",
    "rootDir": "../",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*.ts", "../shared/**/*.ts"]
} 